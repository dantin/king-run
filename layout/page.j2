{% extends "base.j2" %}

{% from "macros.j2" import render_sidenav with context %}
{% from "macros.j2" import render_breadcrumb with context %}

{% block main %}
<br />
<div class="container-fluid container">
  <div class="row-fluid">
    <div class="span2">
      <div class="well sidebar-nav">
      {{ render_sidenav(menu, submenu, 'nav nav-list', resource.meta.submenunode) }}
      </div>
    </div>

    <div class="span10">
      <div id="breadcrumb">
      {{ render_breadcrumb(menu, submenu, resource.meta.menunode, resource.meta.submenunode) }}
      </div>
        {% block content %}{% endblock %}
    </div>
  </div>
</div>
{% endblock %}
